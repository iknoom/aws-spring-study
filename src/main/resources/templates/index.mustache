{{>layout/header}}

<h1>IKnoom 스프링 부트 예제</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="botton" class="btn btn-primary">
                글 등록
            </a>
        </div>
    </div>
    <br>
    <!-- 목록 출력 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-string">
        <tr>
            <th>게시글 번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}